# Network Configuration
NETWORK=mainnet
# Primary Base mainnet RPC. You can use a public endpoint or a provider like Alchemy/Infura.
ETHEREUM_RPC_URL=https://mainnet.base.org
# Optional: comma-separated fallback RPCs when primary is down
# ETHEREUM_RPC_FALLBACK_URLS=https://base-mainnet.g.alchemy.com/v2/YOUR_KEY,https://base.meowrpc.com
ETHEREUM_PRIVATE_KEY=your_base_mainnet_private_key_here

# Price Symbol Configuration
PRICE_SYMBOL=BTCUSDT

# Futures Contract Configuration
FUTURES_CONTRACT_ADDRESS=0xDc2C6CD0751a83973c97aB52f2FaD25009a9B1D1

# MongoDB Configuration
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/
MONGODB_DATABASE=drawfi
# Optional: comma-separated position IDs to never attempt to close (e.g. after data loss)
# SKIP_POSITION_IDS=4,5

# API Configuration
PORT=3001
API_HOST=0.0.0.0

# Bybit WebSocket
BYBIT_WSS_URL=wss://stream.bybit.com/v5/public/spot

# Admin Configuration
ADMIN_API_KEY=your_secure_admin_api_key_here

# Rate Limiting
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=10

# Yellow Network (optional - enables relayer and USDC position funding)
YELLOW_CLEARNODE_WS_URL=wss://clearnet.yellow.com/ws
YELLOW_RELAYER_PRIVATE_KEY=
# Set to true to allow opening positions with USDC balance via Yellow. The relayer wallet must hold enough ETH on Base mainnet to cover position sizes + gas.
YELLOW_RELAYER_ENABLED=false
# Current ETH price in USD. Used to convert USDC position amounts to ETH wei for the contract.
ETH_USD_RATE=3000
# Yellow asset identifier for USDC on Base mainnet
YELLOW_ASSET=usdc
# Base Mainnet contract addresses (defaults set, override only if using custom deployment)
USDC_CONTRACT_ADDRESS=0x833589fCD6eDb6E08f4c7C32D4f71b54bdA02913
CUSTODY_CONTRACT_ADDRESS=0x019B65A265EB3363822f2752141b3dF16131b262
ADJUDICATOR_CONTRACT_ADDRESS=0x7c7ccbc98469190849BCC6c926307794fDfB11F2

# Monitoring
LOG_LEVEL=info
ALERT_WEBHOOK_URL=
