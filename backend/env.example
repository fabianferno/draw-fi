# Network Configuration
NETWORK=testnet
# Primary Sepolia RPC. If you see 522/timeouts, try an alternative or set fallbacks below.
ETHEREUM_RPC_URL=https://rpc.sepolia.org
# Optional: comma-separated fallback RPCs when primary is down (e.g. 522 errors)
# ETHEREUM_RPC_FALLBACK_URLS=https://rpc2.sepolia.org,https://ethereum-sepolia-rpc.publicnode.com,https://sepolia.drpc.org
ETHEREUM_SEPOLIA_PRIVATE_KEY=your_ethereum_sepolia_private_key_here

# Price Symbol Configuration
PRICE_SYMBOL=BTCUSDT

# Oracle Contract Configuration
CONTRACT_ADDRESS=0xB4Aa6814Ad2EA5DE6feC8Af4f129FfA6777db235

# Futures Contract Configuration
FUTURES_CONTRACT_ADDRESS=0xDc2C6CD0751a83973c97aB52f2FaD25009a9B1D1

# EigenDA Configuration
EIGENDA_PROXY_URL=http://127.0.0.1:3100
EIGENDA_COMMITMENT_MODE=standard

# API Configuration
PORT=3001
API_HOST=0.0.0.0

# Bybit WebSocket
BYBIT_WSS_URL=wss://stream.bybit.com/v5/public/spot

# Admin Configuration
ADMIN_API_KEY=your_secure_admin_api_key_here

# Rate Limiting
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=10

# Yellow Network (optional - enables demo mode and relayer)
YELLOW_CLEARNODE_WS_URL=wss://clearnet-sandbox.yellow.com/ws
YELLOW_RELAYER_PRIVATE_KEY=
# Set to true to allow opening positions with Yellow balance. The relayer wallet (from this key or ETHEREUM_SEPOLIA_PRIVATE_KEY) must hold enough Sepolia ETH to cover each position size + gas; fund it via https://sepoliafaucet.com or https://www.alchemy.com/faucets/ethereum-sepolia
YELLOW_RELAYER_ENABLED=false
# 1 ETH = this many ytest.usd. e.g. 100 means 10 ETH position = 1000 ytest.usd
YELLOW_ETH_TO_ytest_RATE=100
# When true, faucet success also credits Draw-Fi balance (sandbox - no separate transfer needed)
YELLOW_FAUCET_ALSO_CREDIT=true

# Monitoring
LOG_LEVEL=info
ALERT_WEBHOOK_URL=
